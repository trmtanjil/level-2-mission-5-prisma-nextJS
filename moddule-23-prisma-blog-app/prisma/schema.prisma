generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}


model Post{
  id String @id @default(uuid())
  title String @db.VarChar(225)
  content String @db.Text
  thumbnail String?
  isFeatured Boolean @default(false)
  status PostStatus @default(PUBLISHED)
  tags String[]
  views Int @default(0)
  authorId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
model Coment {
  id String @id @default(uuid())
  content String @db.Text
  authorId String 
  parentId String?
status CommentStatus @default(APROVED)
    createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
 
 }




enum PostStatus{
  DRAFT
  PUBLISHED
  ARCHIVED
}
enum CommentStatus{
  APROVED
  REJECT
}