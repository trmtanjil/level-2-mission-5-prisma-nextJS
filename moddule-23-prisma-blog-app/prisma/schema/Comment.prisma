model Coment {
  id        String        @id @default(uuid())
  content   String        @db.Text
  authorId  String
  postId    String
  post      Post          @relation(fields: [postId], references: [id],onDelete: Cascade)
  parentId  String?
  parent    Coment?       @relation("CommentReplies", fields: [parentId], references: [id],onDelete: Cascade)
  repies    Coment[]      @relation("CommentReplies")
  status    CommentStatus @default(APROVED)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  @@index([postId])
  @@index([authorId])
  @@map("comments")
}


enum CommentStatus {
  APROVED
  REJECT
}